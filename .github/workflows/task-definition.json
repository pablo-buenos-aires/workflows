{
  "family": "backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::836940249137:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::836940249137:role/ecsAppTaskRole",
  "containerDefinitions": [
    {
      "name": "backend-container",
      "image": "zaglushka",                    
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "hostPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "DB_HOST", "value": "db-postgres-id.cnk6oeya6pzp.sa-east-1.rds.amazonaws.com" },
        { "name": "DB_PORT", "value": "5432" }
      ],
     "secrets": [
        { "name": "COGNITO_USER_POOL_ID",     "valueFrom": "arn:aws:secretsmanager:sa-east-1:836940249137:secret:db_credentials-NtiqzU:cognitouserpool::" },
        { "name": "AWS_REGION", "valueFrom": "arn:aws:secretsmanager:sa-east-1:836940249137:secret:db_credentials-NtiqzU:awsregion::" },

        { "name": "DB_USER",     "valueFrom": "arn:aws:secretsmanager:sa-east-1:836940249137:secret:db_credentials-NtiqzU:username::" },
        { "name": "DB_PASSWORD", "valueFrom": "arn:aws:secretsmanager:sa-east-1:836940249137:secret:db_credentials-NtiqzU:password::" },
        { "name": "DB_NAME",     "valueFrom": "arn:aws:secretsmanager:sa-east-1:836940249137:secret:db_credentials-NtiqzU:dbname::" }
      ],
      
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend",
          "awslogs-region": "sa-east-1",
          "awslogs-stream-prefix": "go-backend-"
        }
      }
    }
  ]
}
